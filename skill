searchInput.addEventListener("keyup", (e)=>{
  const value = e.target.value.toLowerCase();
})

if(value) {
    displayProducts(data.filter(item => item.name.toLowerCase().indexOf(value) !== - 1))
  }else{
  // 如果search是空的話
    displayProducts(data);
}

